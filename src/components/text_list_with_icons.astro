---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  data: {
    icon: ImageMetadata;
    alt?: string;
    link?: string;
    label: string;
  }[];
}

const { title, data } = Astro.props;
---

<h3 class="text-xl uppercase font-semibold my-2">{title}</h3>
<ul class="ps-4 sm:grid sm:grid-cols-2 md:grid-cols-1 xl:grid-cols-2">
  {
    data.map((entry) => (
      <li class="flex items-center pt-2">
        <picture>
          <source
            media="(max-width:768px)"
            srcset={entry.icon.src}
            width="40px"
            height="40px"
          />
          <img
            src={entry.icon.src}
            width="32px"
            height="32px"
            alt={entry.alt ?? entry.label}
          />
        </picture>
        {entry.link !== undefined ? (
          <a href={entry.link} class="ps-2 text-lg md:text-sm">
            {entry.label}
          </a>
        ) : (
          <span class="ps-2 text-lg">{entry.label}</span>
        )}
      </li>
    ))
  }
</ul>
